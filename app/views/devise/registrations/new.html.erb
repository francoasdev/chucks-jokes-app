<div class="container">
  <div class="row text-center m-auto" style="max-width: 330px; padding: 15px">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= image_tag("chuck.jpg", class: "mb-4", style:"max-width:150px") %>
      <h1 class="h3 mb-3 fw-normal">Sign up</h1>
      <div class="form-floating">
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
        <%= f.label :email %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.label :password %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password_confirmation, class:"form-control", autofocus: true, autocomplete: "new-password" %>
        <%= f.label :password_confirmation %>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up", class:"w-100 btn btn-lg btn-primary" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
