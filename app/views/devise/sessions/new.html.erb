<div class="container">
  <div class="row text-center m-auto" style="max-width: 330px; padding: 15px">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <img class="mb-4" src="/assets/chuck.jpg" style="max-width:150px">
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
      <div class="form-floating form-control-floating">
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
        <%= f.label :email, class: "floated" %>
      </div>
      <div class="form-floating form-control-floating">
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
        <%= f.label :password, class: "floated" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      
      <div class="actions">
        <%= f.submit "Log in", class:"w-100 btn btn-lg btn-primary" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
